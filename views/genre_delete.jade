extends layout 

block content 
    h1 #{title}: #{genre.name}
    p= genre.description

    if vinyl.length

        p #[strong Delete the following vinyls in order to delete this genre.]

        div(style='margin-left:20px;margin-top:20px')

            h4 Vinyls

            dl
            each v in vinyl
                dt
                a(href=v.url) #{v.vinyl_name}
                dd #{v.summary}

    else
        p Do you really want to delete this genre?

        form(method='POST' action='')
            div.form-group
                input#authorid.form-control(type='hidden',name='genre', required='true', value=genre._id )

            button.btn.btn-primary(type='submit') Delete